<h1 class="uk-heading-divider uk-flex uk-flex-between">
  <span>
    {{t 'caluma.form-builder.form.all'}}
  </span>
  <span>
    {{uk-button label=(t 'caluma.form-builder.form.new') on-click=(action (optional on-new-form))}}
  </span>
</h1>
<table class="uk-table uk-table-striped uk-table-hover">
  {{#if hasBlock}}
    {{yield (hash
      head = (component 'cfb-form-list/head')
      body = (component 'cfb-form-list/body' rows=data.lastSuccessful.value loading=data.isRunning)
    )}}
  {{else}}
    {{#cfb-form-list/head}}
      <tr>
        <th>{{t 'caluma.form-builder.form.name'}}</th>
      </tr>
    {{/cfb-form-list/head}}

    {{#cfb-form-list/body rows=data.lastSuccessful.value loading=data.isRunning as |row|}}
      <tr class="cfb-pointer" role="link" {{action (optional on-edit-form) row.node}}>
        <td>
          {{row.node.name}}
        </td>
      </tr>
    {{/cfb-form-list/body}}
  {{/if}}
</table>
