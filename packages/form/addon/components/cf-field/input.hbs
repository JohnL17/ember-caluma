{{#if this.type}}
  {{#let (component (concat "cf-field/input/" this.type)) as |InputComponent|}}
    <div
      class="uk-form-controls
        {{if
          (and
            (has-question-type @field.question 'multiple-choice' 'choice')
            @field.question.raw.meta.vertical
          )
          'uk-flex'
        }}"
    >
      <InputComponent
        @field={{@field}}
        @disabled={{@disabled}}
        @onSave={{@onSave}}
        @context={{@context}}
      />
    </div>
  {{/let}}
{{/if}}